- librairies = [] unless local_assigns.has_key?(:librairies)
- librairies << 'maps'

= content_for :javascripts do
  %script{src: "//maps.google.cn/maps/api/js?v=3.13&sensor=false&libraries=geometry&language=#{I18n.locale}"}
  - librairies.each do |l|
    = javascript_include_tag l, 'data-turbolinks-track' => true
  /%script{src: "//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry&language=#{I18n.locale}"}
  /%script{src: '//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js'}