= form_for @itinerary do |f|
  .form-group
    = f.label :title, :class => 'control-label'
    = f.text_field :title, :class => 'form-control', :placeholder => 'title'
    %h3 stops
    .table-responsive
      %table.table.table-striped.table-hover.table-condensed.stops
        %tr
          %th
            ="#"
          %th
            =f.label :brand, :class => 'control-label'
          %th
            =f.label :establishment, :class => 'control-label'
          %th
            =f.label :description, :class => 'control-label'
          %th
        = f.fields_for :stops do |stop_form|
          = render 'stop_fields', f: stop_form

  = link_to_add_fields "Add Field", f, :stops
  
  - stop_fields_template f, :stops
  
  = f.submit 