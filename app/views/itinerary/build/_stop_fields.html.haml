
.row.row-stop{id: dom_id(f.object)}
  .col-xs-2.col-md-1.middle.logo.text-center><
    = f.hidden_field :id
    = f.hidden_field :establishment_id
    = f.hidden_field :position
    = logo_tag f.object.establishment.try(:brand), :small
  
  .col-xs-8.col-md-11.middle><
  
    .row.no-padding.no-margin><
  
      .col-xs-12.col-sm-3.middle.text-center.no-padding.no-margin><
        %p
          %span.brand_name{id: "brand_name_#{f.options[:child_index]}"}= f.object.establishment.try(:brand).try(:name)
          %br.hidden-xs
          %span.visible-xs-inline= " | "
          %span.establishment_label{id: "establishment_label_#{f.options[:child_index]}"}= f.object.establishment.try(:label)

      .col-xs-12.col-sm-8.middle.text-center.no-padding.no-margin><
        = f.text_area :description, class: "form-control", rows: 2
        = f.hidden_field :_destroy
    
      .hidden-xs.col-sm-1.middle.text-center><
        = link_to '#', class: 'btn btn-danger remove_stop', role: 'button' do
          %i.fa.fa-trash-o
        
  .col-xs-2.visible-xs-inline-block.middle.text-center><
    = link_to '#', class: 'btn btn-danger remove_stop', role: 'button' do 
      %i.fa.fa-trash-o
      
